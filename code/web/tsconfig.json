{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "components/*": ["components/*"],
      "images/*": ["images/*"]
    },
    "types": ["node", "@testing-library/jest-dom", "styled-components", "twin.macro"]
  },
  "include": ["src", "twin.d.ts", "tailwindcss.d.ts", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
}
